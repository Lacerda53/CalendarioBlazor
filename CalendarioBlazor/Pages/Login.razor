@page "/Login"
@layout PublicLayout
@using CalendarioBlazor.Models.AccountViewModels
@using CalendarioBlazor.Models
@using Microsoft.AspNetCore.Identity
<div class="container">
    <div class="card">
        <div class="card-body">
            <p>Faça login para iniciar sua sessão</p>
            <EditForm Model="@login">
                <div class="input-group mb-3">
                    <input type="email" @bind="login.Email" class="form-control" placeholder="Email"/>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="oi oi-envelope-closed"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" @bind="login.Password" class="form-control" placeholder="Password"/>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="oi oi-lock-locked"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div>
                            <input type="checkbox" @bind="login.RememberMe" id="remember"/>
                            <label for="remember">
                                Relembre-me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Acessar</button>
                    </div>
                </div>
            </EditForm>
            <p class="mb-1">
                <a href="#">Esqueci minha senha</a>
            </p>
        </div>
    </div>
</div>
@code {
